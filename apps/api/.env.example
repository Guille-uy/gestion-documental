# Database
DATABASE_URL="postgresql://dms_user:dms_password@localhost:5432/dms_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRY="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key"
JWT_REFRESH_EXPIRY="7d"

# Server
NODE_ENV="development"
PORT=3001
API_URL="http://localhost:3001"

# Google Drive Integration
# Option 1: Service Account (recommended)
GOOGLE_APPLICATION_CREDENTIALS="./credentials-sa.json"
GOOGLE_DRIVE_FOLDER_ID="your-google-drive-folder-id"

# Option 2: OAuth2 (alternative, for single user)
# GOOGLE_CLIENT_ID="your-client-id"
# GOOGLE_CLIENT_SECRET="your-client-secret"
# GOOGLE_REDIRECT_URI="http://localhost:3001/auth/google/callback"

# Email Notifications (SMTP - Optional for MVP)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# NOTIFICATION_EMAIL_FROM="noreply@dms.local"

# CORS
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# Logging
LOG_LEVEL="debug"
